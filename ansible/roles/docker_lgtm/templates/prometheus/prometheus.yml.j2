# {{ ansible_managed }}

global:
  scrape_interval: 30s
  scrape_timeout: 30s

rule_files: 
  - 'rules/*.yml'

alerting:
  alertmanagers:
    - static_configs:
      - targets:
        - alertmanager:9093

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets:
        - localhost:9090

  - job_name: 'alertmanager'
    static_configs:
      - targets:
        - alertmanager:9093

  - job_name: minio
    metrics_path: /minio/v2/metrics/cluster
    scheme: http
    static_configs:
      - targets: ['minio:9000']

  - job_name: mimir
    static_configs:
      - targets: ["mimir:8080"]

  - job_name: loki
    static_configs:
      - targets: ["loki:3100"]

  - job_name: qbittorrent
    static_configs:
      - targets: ["downloader.trox.lan:8000"]

  - job_name: sabnzbd
    static_configs:
      - targets: ["downloader.trox.lan:9387"]

  - job_name: 'snmp'
    static_configs:
      - targets:
        - 192.168.0.30
    metrics_path: /snmp
    params:
      auth: [public_v3]
      module: [if_mib,hrSystem,hrStorage,synology]
    relabel_configs:
      - source_labels: [__address__]
        target_label: __param_target
      - source_labels: [__param_target]
        target_label: instance
      - target_label: __address__
        replacement: synology.trox.lan:9116  # The SNMP exporter's real hostname:port.

  - job_name: 'snmp_exporter'
    static_configs:
      - targets: ['synology.trox.lan:9116']

  - job_name: cadvisor
    static_configs:
      - targets:
{% for host in groups['docker'] %}
        - {{ host }}:{{ cadvisor_port }}
{% endfor %}

  - job_name: node_exporter
    static_configs:
      - targets:
        - homeassistant.trox.lan:9100
{% for host in groups['all'] %}
        - {{ host }}:9100
{% endfor %}

  - job_name: mysqld_exporter
    static_configs:
      - targets:
{% for host in groups['mariadb'] %}
        - {{ host }}:9104
{% endfor %}