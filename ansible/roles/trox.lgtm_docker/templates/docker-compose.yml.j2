# {{ ansible_managed }}

version: "3.8"
services:
  minio:
    image: minio/minio
    container_name: minio
    entrypoint: [""]
    command: ["sh", "-c", "mkdir -p /data/mimir && minio server --quiet /data --console-address \":9001\""]
    ports:
      - "9000:9000"
      - "9001:9001"
    environment:
      - MINIO_ROOT_USER={{ monitoring_mimir_root_user }}
      - MINIO_ROOT_PASSWORD={{ monitoring_mimir_root_password }}
    volumes:
      - minio-data:/data

  mimir:
    image: grafana/mimir
    container_name: mimir
    command: ["-config.file=/etc/mimir.yml"]
    ports:
      - "9009:9009"
    volumes:
      - ./mimir/mimir.yml:/etc/mimir.yml

  prometheus:
    image: prom/prometheus
    container_name: prometheus
    command:
      - --config.file=/etc/prometheus/prometheus.yml
      - --storage.tsdb.path=/prometheus
    volumes:
      - ./prometheus/prometheus.yml:/etc/prometheus/prometheus.yml
      - ./prometheus/rules/:/etc/prometheus/rules/
    ports:
      - "9090:9090"

  grafana:
    image: grafana/grafana
    container_name: grafana
    ports:
      - "3000:3000"
    volumes:
      - ./grafana/provisioning:/etc/grafana/provisioning
      - grafana-data:/var/lib/grafana
    depends_on:
      - prometheus

volumes:
  grafana-data:
  minio-data: