local.file_match "hostlogs" {
    path_targets = [{"__path__" = "/var/host_logs/*.log"}, {"__path__" = "/var/host_logs/syslog"}]
}

loki.source.file "local_files" {
    targets    = local.file_match.hostlogs.targets
    forward_to = [loki.write.default.receiver]
}

loki.write "default" {
    endpoint {
        url = "https://loki.home.trox.dev/loki/api/v1/push"
    }
}